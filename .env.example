# =================================
# SERVER CONFIGURATION
# =================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# =================================
# DATABASE CONFIGURATION
# =================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password
DB_DATABASE=lms_database
DB_SYNCHRONIZE=true
DB_LOGGING=true

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =================================
# JWT CONFIGURATION
# =================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# =================================
# EMAIL CONFIGURATION
# =================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@yourdomain.com

# =================================
# FILE STORAGE CONFIGURATION
# =================================
# Local storage
UPLOAD_DESTINATION=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 Configuration (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Google Cloud Storage (alternative)
GCS_PROJECT_ID=your-gcs-project-id
GCS_BUCKET_NAME=your-gcs-bucket-name
GCS_KEY_FILE=path/to/service-account-key.json

# =================================
# EXTERNAL SERVICES
# =================================
# OpenAI API for AI features
OPENAI_API_KEY=your-openai-api-key

# Python AI Service URL
AI_SERVICE_URL=http://localhost:8000

# Payment Gateway (Stripe example)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Social OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# =================================
# SECURITY CONFIGURATION
# =================================
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# =================================
# MONITORING & LOGGING
# =================================
LOG_LEVEL=debug
SENTRY_DSN=your-sentry-dsn

# =================================
# VIDEO CALL CONFIGURATION
# =================================
WEBRTC_ICE_SERVERS=stun:stun.l.google.com:19302
TURN_SERVER_URL=your-turn-server-url
TURN_SERVER_USERNAME=your-turn-username
TURN_SERVER_CREDENTIAL=your-turn-credential

# =================================
# NOTIFICATION SERVICES
# =================================
# Firebase for push notifications
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# SMS Service (Twilio example)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# =================================
# DEVELOPMENT TOOLS
# =================================
SWAGGER_ENABLED=true
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3001

