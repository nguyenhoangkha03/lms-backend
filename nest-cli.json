{
  "$schema": "https://json.schemastore.org/nest-cli", 
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "watchAssets": true,
    "assets": [
        "**/*.json",
        "**/*.hbs",
        "**/*.html"
    ]
  },
  "generateOptions": {
    "spec": true,
    "flat": false 
  }
}
